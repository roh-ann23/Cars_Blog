<% if(cars != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- cars.name %></li>
      </ol>
    </nav>
  
  
    <div class="row">
  
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- cars.image %>" class="img-fluid sticky-top rounded border border-dark my-4" style="top: 40px;" alt="<%- cars.name %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- cars.name %></h1></div>
          <div class="col-12"><h1><%- cars.price %></h1></div>
          <div class="col-12"> <i class="bi bi-tag"></i> <%- cars.category %></div>
          <div class="col-12" style="white-space: pre-line; margin-left: 10px;">
            <h4 > Description </h4>
                <%- cars.description %>
          </div>
        </div>
  
        <div class="row pt-4">
          <div class="col-12">
            <h4>Functionality</h4>
            <ul class="list-group list-group-flush">
              <% cars.functionality.forEach(function(functions, index){ %>
                <li class="list-group-item"><%- functions %></li>
              <% }) %>
            </ul> 
          </div>
        </div>


      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>